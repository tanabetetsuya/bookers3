<h1 class="index_title">Books</h1>
<p id="notice">
  <%= notice %>
</p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to 'Show', book_path(book), class: "commonlink" %>
      </td>
      <td>
        <%= link_to 'Edit', edit_book_path(book), class: "commonlink" %>
      </td>
      <td>
        <%= link_to 'Destroy', book_path(book), class: "commonlink", method: :delete, "data-confirm" => "本当に削除しますか" %>
      </td>
      
    </tr>
    <% end %>
  </tbody>
</table>
  <h2 class="new_header">New Books</h2>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model: @book, url:"/books", local:true do |f| %>
  
  <div class="new_title">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
  
  <div classs="new_body">
  <h4>Body</h4>
  <%= f.text_area :body %>
  </div>
  
  <div>
  <%= f.submit 'Create Book', class: "createbook" %>
  </div>
  
  <% end %>
</table>
